<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <% if (message) { %>
    <div class="alert alert-danger col-6 offset-3" role="alert">
      <p class="alert-heading"><%= message %></p>
    </div>
  <% } else { %>
    <div class="alert alert-warning col-6 offset-3" role="alert">
      <p class="alert-heading">No message available</p>
    </div>
  <% } %>
</div>
